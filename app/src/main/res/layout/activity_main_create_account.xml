<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainCreateAccount"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/btnSave"
        android:layout_width="256dp"
        android:layout_height="65dp"
        android:background="@drawable/btn_login"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Сохранить"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Внесите данные"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/icon_create_acc" />

    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="93dp"
        android:background="@drawable/edit_text_login"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/editName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81">

        <ImageView
            android:id="@+id/imgAva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/anonims" />

        <Button
            android:id="@+id/btnLoadAva"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_blue"
            android:fontFamily="@font/inter_bold"
            android:text="Загрузить"
            android:padding="40px"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:drawableStart="@drawable/plus"/>


    </LinearLayout>

    <EditText
        android:id="@+id/editName"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:background="@drawable/edit_text_login"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:hint="Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#A3A3A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387" />

    <EditText
        android:id="@+id/editLastName"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:background="@drawable/edit_text_login"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:hint="Last name"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#A3A3A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintVertical_bias="0.058" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:background="@drawable/edit_text_login"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:hint="Birthday"
        android:inputType="date"
        android:padding="10dp"
        android:textColorHint="#A3A3A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLastName"
        app:layout_constraintVertical_bias="0.098" />

    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="277dp"
        android:layout_height="38dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.757"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radioMan"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:button="@drawable/custem_radio_icon"
            android:text="   Муж" />

        <RadioButton
            android:id="@+id/radioWoman"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:button="@drawable/custem_radio_icon"
            android:text="   Жен"
            tools:layout_editor_absoluteX="226dp"
            tools:layout_editor_absoluteY="528dp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>